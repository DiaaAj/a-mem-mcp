{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.DiaaAj/a-mem-mcp",
  "description": "Self-evolving memory system for AI agents",
  "repository": {
    "url": "https://github.com/DiaaAj/a-mem-mcp",
    "source": "github"
  },
  "version": "0.2.1",
  "packages": [
    {
      "registryType": "pypi",
      "identifier": "a-mem",
      "version": "0.2.1",
      "command": "a-mem-mcp",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "description": "LLM backend to use (openai, ollama, sglang, or openrouter)",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "LLM_BACKEND",
          "default": "openai"
        },
        {
          "description": "LLM model name (e.g., gpt-4o-mini, llama2, etc.)",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "LLM_MODEL",
          "default": "gpt-4o-mini"
        },
        {
          "description": "OpenAI API key (required if LLM_BACKEND=openai)",
          "isRequired": true,
          "format": "string",
          "isSecret": true,
          "name": "OPENAI_API_KEY"
        },
        {
          "description": "Sentence transformer model for embeddings",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "EMBEDDING_MODEL",
          "default": "all-MiniLM-L6-v2"
        },
        {
          "description": "ChromaDB storage directory path",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "CHROMA_DB_PATH",
          "default": "./chroma_db"
        }
      ]
    }
  ]
}
